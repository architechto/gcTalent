<div class="container-fluid">
	<div class="row">

		<%= render "/shared/topbar" %>
		<%= render "/shared/sidebar" %>

		<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

			<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
				<h1 class="h2">Profile</h1>
				<div class="btn-toolbar mb-2 mb-md-0">
					<div class="btn-group mr-2">
						<button class="btn btn-sm btn-outline-secondary"><%= link_to "Back", :back %></button>
					</div>
					<div class="btn-group mr-2">
						<button class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_user_registration_path %></button>
					</div>
					<div class="btn-group mr-2">
						<button class="btn btn-sm btn-outline-secondary"><%= link_to "Logout", destroy_user_session_path, class: 'nav-link', method: :delete %></button>
					</div>
				</div>
			</div>

			<div>
				<p><%= @user.email %></p>
			</div>

		</main>
	</div>
</div>