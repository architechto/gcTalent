<div class="text-center form-signin">
  <h1 class="h3 mb-3 font-weight-normal">Register</h1>
  <div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|  %>

      <%= devise_error_messages! %>
      <% passcode = "gctalent" %>

      <div class="field">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email address', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'sr-only' %>
        <br />
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter the Passcode', autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'sr-only' %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', autocomplete: "off", value: passcode, hidden: true %>
      </div>
      <div class="actions">
        <%= f.submit "Enter", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
      <br/>
    <% end %>
  </div> 
  <%= render "devise/shared/links" %>
</div>