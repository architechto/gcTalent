<div class="text-center form-signin">
  <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>  

      <%= devise_error_messages! %>
      <% passcode = "gctalent" %>

      <div class="field">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email address', autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :password, class: 'sr-only' %>
        <br />
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off", value: passcode, hidden: true %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Enter", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
      <br>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    <% end %>
    
  </div>
  <%= render "devise/shared/links" %>
</div>